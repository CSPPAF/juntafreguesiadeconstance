generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Denuncia {
  id            Int      @id @default(autoincrement())
  vinculo       String
  tipoVinculo   String?
  denuncia      String
  departamento  String?
  identificacao String?  // armazenado encriptado
  anonimo       Boolean
  nome          String?  // armazenado encriptado
  contacto      String?  // armazenado encriptado
  email         String?  // armazenado encriptado
  fotoPath      String?
  anexoPath     String?
  createdAt     DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  nif       String   @unique // ← será usado para login
  email     String   @unique // ← para recuperação de senha
  password  String   // hashed
  role      String   @default("user")
  createdAt DateTime @default(now())
}